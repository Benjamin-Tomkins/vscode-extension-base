{
  "name": "epic",
  "displayName": "Epic Extension",
  "description": "A powerful extension for VS Code",
  "version": "0.0.1",
  "publisher": "John-Doe",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "epic.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "epic.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "epic.option1",
        "title": "Option 1",
        "icon": "$(icon-name)"
      },
      {
        "command": "epic.option2",
        "title": "Option 2",
        "icon": "$(icon-name)"
      },
      {
        "command": "epic.option3",
        "title": "Option 3"
      },
      {
        "command": "epic.showMenu",
        "title": "Epic Menu",
        "icon": "$(star)"
      },
      {
        "command": "epic.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "epic-sidebar",
          "title": "Epic Extension",
          "icon": "$(star)"
        }
      ]
    },
    "views": {
      "epic-sidebar": [
        {
          "id": "epicExplorer",
          "name": "Epic Explorer",
          "icon": "$(star)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "epic.refreshEntry",
          "when": "view == epicExplorer",
          "group": "navigation"
        },
        {
          "command": "epic.openSettings",
          "when": "view == epicExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "epic.option1",
          "when": "view == epicExplorer",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "submenu": "epic.customMenu",
          "group": "epic@1"
        }
      ],
      "explorer/context": [
        {
          "submenu": "epic.customMenu",
          "group": "epic@1"
        }
      ],
      "epic.menu": [
        {
          "command": "epic.option1",
          "group": "1_commands@1"
        },
        {
          "command": "epic.option2",
          "group": "1_commands@2"
        },
        {
          "command": "epic.option3",
          "group": "1_commands@3"
        },
        {
          "submenu": "epic.customMenu",
          "group": "2_submenu"
        }
      ],
      "commandPalette": [
        {
          "command": "epic.option1"
        },
        {
          "command": "epic.option2"
        },
        {
          "command": "epic.option3"
        },
        {
          "command": "epic.showMenu"
        },
        {
          "command": "epic.openSettings"
        }
      ],
      "epic.customMenu": [
        {
          "command": "epic.option1",
          "group": "1_options"
        },
        {
          "command": "epic.option2",
          "group": "1_options"
        },
        {
          "command": "epic.option3",
          "group": "2_more@1"
        }
      ]
    },
    "submenus": [
      {
        "id": "epic.customMenu",
        "label": "Epic Options"
      }
    ],
    "customEditors": [],
    "iconThemes": [],
    "colors": [
      {
        "id": "epic.categoryHeaderBackground",
        "description": "Background color for Epic category headers",
        "defaults": {
          "dark": "#323232",
          "light": "#E8E8E8",
          "highContrast": "#000000"
        }
      },
      {
        "id": "epic.categoryHeaderForeground",
        "description": "Text color for Epic category headers",
        "defaults": {
          "dark": "#FFFFFF",
          "light": "#000000",
          "highContrast": "#FFFFFF"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
